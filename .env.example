# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Environment (development/production)
NODE_ENV=development

# Production webhook settings (only needed for production deployment)
WEBHOOK_DOMAIN=https://your-domain.com
PORT=3000

# Thermal Printer Configuration
THERMAL_PRINTER_IP=192.168.1.100
THERMAL_PRINTER_PORT=9100

# Access Control - Comma-separated list of authorized Telegram user IDs
# To get your user ID, run the bot and send any message - it will show your ID
AUTHORIZED_USERS=123456789,987654321 